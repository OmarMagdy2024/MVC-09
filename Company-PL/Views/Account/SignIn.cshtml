
@model SignInVM
@{
    ViewData["Title"] = "SignIn Form";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignIn">

			<input class="text email" asp-for="Email" placeholder="Email ..." required="">
			<span asp-validation-for="Email" class="text-danger"></span>

			<input class="text" type="password" asp-for="Password" placeholder="Password" required="">
			<span asp-validation-for="Password" class="text-danger"></span>

			<div class="wthree-text">
				<label class="anim mt-3">
					<input type="checkbox" class="checkbox" asp-for="RememberMe" >
					<span asp-validation-for="RememberMe">RememberMe</span>
				</label>
				<div class="clear"> </div>
			</div>

			<input type="submit" value="Login">
		</form>

		<p>Don't have an Account? <a asp-action="SignUp" asp-controller="Account"> Create Account!</a></p>

	</div>
</div>

@section Validation {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

