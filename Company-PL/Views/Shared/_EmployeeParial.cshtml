@model Employee
@inject IDepartmentRepository _department

<div class="mb-3">
    <label asp-for="Name">Name :</label>
    <input type="text" asp-for="Name" placeholder="Name Of Employee" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="HiringDate">Hiring Date :</label>
    <input asp-for="HiringDate" class="form-control" />
    <span asp-validation-for="HiringDate" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Email">Email :</label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Age">Age :</label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Gender">Gender :</label>
    <select asp-for="Gender" class="form-control">
        <option>-- Select Gender --</option>
        <option value="1">Male</option>
        <option value="2">Female</option>
    </select>
    <span asp-validation-for="Gender" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Salary">Salary :</label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Address">Address :</label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Phone">Phone Number :</label>
    <input asp-for="Phone" class="form-control" />
    <span asp-validation-for="Phone" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="DepartmentId" class="col-form-label">Department :</label>
    <select class="form-control" asp-items="@new SelectList(_department.GetAll(),nameof(Department.Id),nameof(Department.Name))" asp-for="DepartmentId">
        <option>-- Select Department --</option>
    </select>
</div>
<div class="mb-3">
    <label asp-for="Image">Select Your Photo :</label>
    <input asp-for="Image" class="form-control-file" />
</div>
<div class="mb-3">
    <label asp-for="IsActive">IsActive :</label>
    <input asp-for="IsActive" class="form-control" />
    <span asp-validation-for="IsActive" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="IsDeleted">IsDeleted :</label>
    <input asp-for="IsDeleted" class="form-control" />
    <span asp-validation-for="IsDeleted" class="text-danger"></span>
</div>
