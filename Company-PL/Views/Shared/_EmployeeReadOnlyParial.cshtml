@model Employee

<div class="shadow rounded-circle w-25 h-25">
    <img src="~/Files/Images/@Model.ImageName" class="img-fluid rounded-circle w-100 h-100" />
</div>
<div class="mb-3 mt-3">
    <label asp-for="Name">Name :</label>
    <input readonly asp-for="Name" placeholder="Name Of Employee" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="HiringDate">Hiring Date :</label>
    <input readonly asp-for="HiringDate" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="Email">Email :</label>
    <input readonly asp-for="Email" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="Age">Age :</label>
    <input readonly asp-for="Age" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="Gender">Gender :</label>
    <input readonly asp-for="Gender" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="Salary">Salary :</label>
    <input readonly asp-for="Salary" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="Address">Address :</label>
    <input readonly asp-for="Address" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="Phone">Phone Number :</label>
    <input readonly asp-for="Phone" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="ImageName">Image Name :</label>
    <input readonly asp-for="ImageName" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="DepartmentId">Department :</label>
    <input readonly asp-for="Department.Name" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="IsActive">IsActive :</label>
    <input readonly asp-for="IsActive" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="IsDeleted">IsDeleted :</label>
    <input readonly asp-for="IsDeleted" class="form-control" />
</div>